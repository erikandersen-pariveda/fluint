<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml">
    <mx:Script>
        <![CDATA[
            import net.digitalprimates.fluint.utils.EventTracker;
        ]]>
    </mx:Script>
   <mx:XMLList id="employees">
        <employee>
            <name>Christina Coenraets</name>
            <phone>555-219-2270</phone>
            <email>ccoenraets@fictitious.com</email>
            <active>true</active>
        </employee>
        <employee>
            <name>Joanne Wall</name>
            <phone>555-219-2012</phone>
            <email>jwall@fictitious.com</email>
            <active>true</active>
        </employee>
        <employee>
            <name>Maurice Smith</name>
            <phone>555-219-2012</phone>
            <email>maurice@fictitious.com</email>
            <active>false</active>
        </employee>
        <employee>
            <name>Mary Jones</name>
            <phone>555-219-2000</phone>
            <email>mjones@fictitious.com</email>
            <active>true</active>
        </employee>
    </mx:XMLList>

    <mx:DataGrid id="dataGrid" width="100%" height="100%" rowCount="5" dataProvider="{employees}" initialize="EventTracker.instance.recordEvents(event)">
        <mx:columns>
            <mx:DataGridColumn headerText="First Column">
                 <mx:itemRenderer>
                    <mx:Component>
                        <mx:VBox>
                            <mx:Button id="aButton" />	
                        </mx:VBox>
                    </mx:Component>
                 </mx:itemRenderer>
            </mx:DataGridColumn>
            <mx:DataGridColumn dataField="name" headerText="Name"/>
            <mx:DataGridColumn dataField="phone" headerText="Phone"/>
            <mx:DataGridColumn dataField="email" headerText="Email"/>
            <mx:DataGridColumn headerText="Last (Fifth) Column">
                 <mx:itemRenderer>
                    <mx:Component>
                        <mx:VBox>
                            <mx:TextInput id="aTextInput" />	
                        </mx:VBox>
                    </mx:Component>
                 </mx:itemRenderer>
            </mx:DataGridColumn>
        </mx:columns>
    </mx:DataGrid>

    <mx:Form width="100%" height="100%">
        <mx:FormItem label="Name">
            <mx:Label id="nameLabel" text="{dataGrid.selectedItem.name}"/>
        </mx:FormItem>
        <mx:FormItem label="Email">
            <mx:Label id="emailLabel" text="{dataGrid.selectedItem.email}"/>
        </mx:FormItem>
        <mx:FormItem label="Phone">
            <mx:Label id="phoneLabel" text="{dataGrid.selectedItem.phone}"/>
        </mx:FormItem>
    </mx:Form>
</mx:VBox>
